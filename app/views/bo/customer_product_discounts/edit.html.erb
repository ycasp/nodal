<% content_for :bo_main_content do %>

<div class="mb-4">
  <div class="d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-3">
      <%= link_to bo_customer_product_discounts_path(params[:org_slug]), class: "text-muted" do %>
        <i class="fa-solid fa-arrow-left"></i>
      <% end %>

      <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white fw-bold" style="width: 60px; height: 60px; font-size: 1.25rem;">
        <i class="fa-solid fa-percent"></i>
      </div>

      <div>
        <h4 class="mb-0">Edit Custom Price</h4>
        <span class="text-muted"><%= @discount.customer.company_name %> - <%= @discount.product.name %></span>
      </div>
    </div>

    <div class="d-flex gap-2 align-items-center">
      <%= link_to bo_customer_product_discounts_path(params[:org_slug]), class: "btn btn-outline-secondary" do %>
        Cancel
      <% end %>
      <button type="submit" form="customer-product-discount-form" class="btn btn-primary">
        <i class="fa-solid fa-check"></i> Update Discount
      </button>
    </div>
  </div>
</div>

<% if @discount.errors.any? %>
  <div class="alert alert-danger mb-4">
    <h6 class="alert-heading">Please fix the following errors:</h6>
    <ul class="mb-0">
      <% @discount.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @discount, url: bo_customer_product_discount_path(params[:org_slug], @discount), method: :patch, id: "customer-product-discount-form" do |f| %>
  <div class="row g-3">
    <div class="col-md-8">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title mb-4">Discount Details</h5>

          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label">Customer <span class="text-danger">*</span></label>
              <%= f.collection_select :customer_id, @customers, :id, :company_name, { prompt: "Select a customer..." }, { class: "form-select", required: true } %>
            </div>
            <div class="col-md-6">
              <label class="form-label">Product <span class="text-danger">*</span></label>
              <%= f.collection_select :product_id, @products, :id, :name, { prompt: "Select a product..." }, { class: "form-select", required: true } %>
            </div>
          </div>

          <div class="row g-3 mt-1">
            <div class="col-md-6">
              <label class="form-label">Discount Percentage <span class="text-danger">*</span></label>
              <%= f.number_field :discount_percentage, class: "form-control", placeholder: "0.10", step: 0.01, min: 0, max: 1, required: true %>
              <small class="text-muted">Enter a value between 0 and 1 (e.g., 0.15 = 15% discount)</small>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-4">Validity Period</h5>

          <div class="mb-3">
            <label class="form-label">Valid From <span class="text-danger">*</span></label>
            <%= f.date_field :valid_from, class: "form-control", required: true %>
          </div>

          <div>
            <label class="form-label">Valid Until <span class="text-danger">*</span></label>
            <%= f.date_field :valid_until, class: "form-control", required: true %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% end %>
