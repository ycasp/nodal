<% content_for :bo_main_content do%>

<div class="mb-4">
  <div class="d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-3">
      <%= link_to bo_customer_path(params[:org_slug], @customer), class: "text-muted" do %>
        <i class="fa-solid fa-arrow-left"></i>
      <% end %>

      <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center text-white fw-bold" style="width: 60px; height: 60px; font-size: 1.25rem;">
        <%= @customer.contact_name&.split&.map(&:first)&.join&.upcase || "?" %>
      </div>

      <div>
        <h4 class="mb-0">Edit Customer</h4>
        <span class="text-muted"><%= @customer.company_name %></span>
      </div>
    </div>

    <div class="d-flex gap-2 align-items-center">
      <%= link_to bo_customer_path(params[:org_slug], @customer), class: "btn btn-outline-secondary" do %>
        Cancel
      <% end %>
      <button type="submit" form="customer-form" class="btn btn-primary">
        <i class="fa-solid fa-check"></i> Save Changes
      </button>
    </div>
  </div>
</div>

<%= form_with model: @customer, url: bo_customer_path(params[:org_slug], @customer), method: :patch, id: "customer-form" do |f| %>
  <div class="row g-3">
    <div class="col-md-8">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title mb-4">Contact Information</h5>

          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label">Contact Name</label>
              <%= f.text_field :contact_name, class: "form-control", placeholder: "Enter contact name" %>
            </div>
            <div class="col-md-6">
              <label class="form-label">Email</label>
              <%= f.email_field :email, class: "form-control", placeholder: "Enter email address" %>
            </div>
          </div>

          <div class="row g-3 mt-1">
            <div class="col-md-6">
              <label class="form-label">Phone</label>
              <%= f.text_field :contact_phone, class: "form-control", placeholder: "Enter phone number" %>
            </div>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-4">Company Details</h5>

          <div class="row g-3">
            <div class="col-md-12">
              <label class="form-label">Company Name</label>
              <%= f.text_field :company_name, class: "form-control", placeholder: "Enter company name" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title mb-4">Account Status</h5>

          <div class="form-check form-switch">
            <%= f.check_box :active, class: "form-check-input", role: "switch", id: "activeSwitch" %>
            <label class="form-check-label" for="activeSwitch">Active Customer</label>
          </div>
          <small class="text-muted">Inactive customers cannot place orders</small>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-4">Account Info</h5>

          <div class="border-bottom pb-3 mb-3">
            <small class="text-muted d-block">Client ID</small>
            <span>C<%= @customer.id.to_s.rjust(3, '0') %></span>
          </div>

          <div class="border-bottom pb-3 mb-3">
            <small class="text-muted d-block">Member Since</small>
            <span><%= @customer.created_at.strftime("%-m/%-d/%Y") %></span>
          </div>

          <div>
            <small class="text-muted d-block">Last Updated</small>
            <span><%= @customer.updated_at.strftime("%-m/%-d/%Y") %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% end %>
