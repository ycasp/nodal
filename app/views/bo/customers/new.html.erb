<% content_for :bo_main_content do %>

<div class="mb-4">
  <div class="d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-3">
      <%= link_to bo_customers_path(params[:org_slug]), class: "text-muted" do %>
        <i class="fa-solid fa-arrow-left"></i>
      <% end %>

      <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white fw-bold" style="width: 60px; height: 60px; font-size: 1.25rem;">
        <i class="fa-solid fa-user-plus"></i>
      </div>

      <div>
        <h4 class="mb-0">New Customer</h4>
        <span class="text-muted">Create a new customer account</span>
      </div>
    </div>

    <div class="d-flex gap-2 align-items-center">
      <%= link_to bo_customers_path(params[:org_slug]), class: "btn btn-outline-secondary" do %>
        Cancel
      <% end %>
      <button type="submit" form="customer-form" class="btn btn-primary">
        <i class="fa-solid fa-check"></i> Create Customer
      </button>
    </div>
  </div>
</div>

<%= form_with model: @customer, url: bo_customers_path(params[:org_slug]), method: :post, id: "customer-form" do |f| %>
  <div class="row g-3">
    <div class="col-md-8">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title mb-4">Contact Information</h5>

          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label">Contact Name <span class="text-danger">*</span></label>
              <%= f.text_field :contact_name, class: "form-control", placeholder: "Enter contact name", required: true %>
            </div>
            <div class="col-md-6">
              <label class="form-label">Email <span class="text-danger">*</span></label>
              <%= f.email_field :email, class: "form-control", placeholder: "Enter email address", required: true %>
            </div>
          </div>

          <div class="row g-3 mt-1">
            <div class="col-md-6">
              <label class="form-label">Phone</label>
              <%= f.text_field :contact_phone, class: "form-control", placeholder: "Enter phone number" %>
            </div>
          </div>
        </div>
      </div>

      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title mb-4">Company Details</h5>

          <div class="row g-3">
            <div class="col-md-12">
              <label class="form-label">Company Name <span class="text-danger">*</span></label>
              <%= f.text_field :company_name, class: "form-control", placeholder: "Enter company name", required: true %>
            </div>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-4">Login Credentials</h5>

          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label">Password <span class="text-danger">*</span></label>
              <%= f.password_field :password, class: "form-control", placeholder: "Enter password", required: true, autocomplete: "new-password" %>
              <small class="text-muted">Minimum 6 characters</small>
            </div>
            <div class="col-md-6">
              <label class="form-label">Confirm Password <span class="text-danger">*</span></label>
              <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password", required: true, autocomplete: "new-password" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-4">Account Status</h5>

          <div class="form-check form-switch">
            <%= f.check_box :active, class: "form-check-input", role: "switch", id: "activeSwitch", checked: true %>
            <label class="form-check-label" for="activeSwitch">Active Customer</label>
          </div>
          <small class="text-muted">Inactive customers cannot place orders</small>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% end %>
