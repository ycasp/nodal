<div class="card dashboard__card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h6 class="mb-0">
      <i class="fa-solid fa-coins me-2 text-success"></i> Revenue per Product
    </h6>
    <%= link_to bo_pricing_path(org_slug: organisation.slug), class: "btn btn-sm btn-link" do %>
      Pricing <i class="fa-solid fa-arrow-right ms-1"></i>
    <% end %>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-sm align-middle mb-0" id="revenue-per-product">
        <thead class="table-light">
          <tr>
            <th>Product</th>
            <th class="text-end">Gross</th>
            <th class="text-end">Discounts</th>
            <th class="text-end">Net</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td colspan="4" class="text-center text-muted py-3">
              <i class="fa-solid fa-spinner fa-spin"></i> Loading...
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
