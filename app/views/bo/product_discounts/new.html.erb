<% content_for :bo_main_content do %>

<div class="mb-4">
  <div class="d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-3">
      <%= link_to bo_pricing_path(params[:org_slug], tab: 'product_discounts'), class: "text-muted" do %>
        <i class="fa-solid fa-arrow-left"></i>
      <% end %>

      <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center text-white fw-bold" style="width: 60px; height: 60px; font-size: 1.25rem;">
        <i class="fa-solid fa-tag"></i>
      </div>

      <div>
        <h4 class="mb-0">New Product Discount</h4>
        <span class="text-muted">Set up a discount visible to all customers</span>
      </div>
    </div>

    <div class="d-flex gap-2 align-items-center">
      <%= link_to bo_pricing_path(params[:org_slug], tab: 'product_discounts'), class: "btn btn-outline-secondary" do %>
        Cancel
      <% end %>
      <button type="submit" form="product-discount-form" class="btn btn-primary">
        <i class="fa-solid fa-check"></i> Create Discount
      </button>
    </div>
  </div>
</div>

<% if @discount.errors.any? %>
  <div class="alert alert-danger mb-4">
    <h6 class="alert-heading">Please fix the following errors:</h6>
    <ul class="mb-0">
      <% @discount.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @discount, url: bo_product_discounts_path(params[:org_slug]), method: :post, id: "product-discount-form" do |f| %>
  <div class="row g-3">
    <div class="col-md-8">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title mb-4">Discount Details</h5>

          <div class="row g-3">
            <div class="col-md-12">
              <label class="form-label">Product <span class="text-danger">*</span></label>
              <%= f.collection_select :product_id, @products, :id, :name, { prompt: "Select a product..." }, { class: "form-select", required: true } %>
            </div>
          </div>

          <div class="row g-3 mt-1">
            <div class="col-md-4">
              <label class="form-label">Discount Type <span class="text-danger">*</span></label>
              <%= f.select :discount_type, [['Percentage', 'percentage'], ['Fixed Amount', 'fixed']], {}, { class: "form-select", required: true } %>
            </div>
            <div class="col-md-4">
              <label class="form-label">Discount Value <span class="text-danger">*</span></label>
              <%= f.number_field :discount_value, class: "form-control", placeholder: "0.10", step: 0.01, min: 0, required: true %>
              <small class="text-muted">For percentage: 0.15 = 15%. For fixed: 5.00 = <%= @current_organisation.currency_symbol %>5</small>
            </div>
            <div class="col-md-4">
              <label class="form-label">Min Quantity</label>
              <%= f.number_field :min_quantity, class: "form-control", placeholder: "1", step: 1, min: 1, value: @discount.min_quantity || 1 %>
              <small class="text-muted">Minimum quantity to apply discount</small>
            </div>
          </div>

          <div class="row g-3 mt-3">
            <div class="col-md-6">
              <div class="form-check form-switch">
                <%= f.check_box :stackable, class: "form-check-input", role: "switch", id: "stackableSwitch" %>
                <label class="form-check-label" for="stackableSwitch">
                  Stackable with other discounts
                </label>
              </div>
              <small class="text-muted">If enabled, this discount can combine with customer discounts</small>
            </div>
            <div class="col-md-6">
              <div class="form-check form-switch">
                <%= f.check_box :active, class: "form-check-input", role: "switch", id: "activeSwitch", checked: @discount.active.nil? || @discount.active? %>
                <label class="form-check-label" for="activeSwitch">
                  Active
                </label>
              </div>
              <small class="text-muted">Enable or disable this discount</small>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-4">Validity Period</h5>
          <p class="text-muted small">Leave blank for no expiration</p>

          <div class="mb-3">
            <label class="form-label">Valid From</label>
            <%= f.date_field :valid_from, class: "form-control" %>
          </div>

          <div>
            <label class="form-label">Valid Until</label>
            <%= f.date_field :valid_until, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% end %>
