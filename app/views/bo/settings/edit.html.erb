<% content_for :bo_main_content do%>

<div class="mb-4">
  <div class="d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-3">
      <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white fw-bold" style="width: 60px; height: 60px; font-size: 1.25rem;">
        <i class="fa-solid fa-building"></i>
      </div>

      <div>
        <h4 class="mb-0">Organisation Settings</h4>
        <span class="text-muted"><%= @organisation.name %></span>
      </div>
    </div>

    <div class="d-flex gap-2 align-items-center">
      <%= link_to bo_path, class: "btn btn-outline-secondary" do %>
        Cancel
      <% end %>
      <button type="submit" form="settings-form" class="btn btn-primary">
        <i class="fa-solid fa-check"></i> Save Changes
      </button>
    </div>
  </div>
</div>

<%= form_with model: @organisation, url: bo_settings_path, method: :patch, id: "settings-form" do |f| %>
  <div class="row g-3">
    <div class="col-md-8">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title mb-4">General Information</h5>

          <div class="row g-3">
            <div class="col-md-12">
              <label class="form-label">Organisation Name</label>
              <%= f.text_field :name, class: "form-control", placeholder: "Enter organisation name" %>
            </div>
          </div>

          <div class="row g-3 mt-1">
            <div class="col-md-12">
              <label class="form-label">Billing Email</label>
              <%= f.email_field :billing_email, class: "form-control", placeholder: "Enter billing email address" %>
              <small class="text-muted">Used for invoices and billing communications</small>
            </div>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-4">Commerce Settings</h5>

          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label">Default Tax Rate (%)</label>
              <%= f.number_field :tax_rate, class: "form-control", step: 0.01, min: 0, max: 1, placeholder: "0.08" %>
              <small class="text-muted">Enter as decimal (e.g., 0.08 for 8%)</small>
            </div>
            <div class="col-md-6">
              <label class="form-label">Default Shipping Cost</label>
              <%= f.number_field :shipping_cost, class: "form-control", step: 0.01, min: 0, placeholder: "15.00" %>
              <small class="text-muted">In <%= @organisation.shipping_cost_currency %></small>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title mb-4">Organisation Info</h5>

          <div class="border-bottom pb-3 mb-3">
            <small class="text-muted d-block">Slug</small>
            <code><%= @organisation.slug %></code>
          </div>

          <div class="border-bottom pb-3 mb-3">
            <small class="text-muted d-block">Status</small>
            <span class="badge <%= @organisation.active? ? 'bg-success' : 'bg-danger' %>">
              <%= @organisation.active? ? 'Active' : 'Inactive' %>
            </span>
          </div>

          <div class="border-bottom pb-3 mb-3">
            <small class="text-muted d-block">Created</small>
            <span><%= @organisation.created_at.strftime("%-m/%-d/%Y") %></span>
          </div>

          <div>
            <small class="text-muted d-block">Last Updated</small>
            <span><%= @organisation.updated_at.strftime("%-m/%-d/%Y") %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% end %>
