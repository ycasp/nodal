<aside class="bo-sidebar">
  <!-- Logo -->
  <div class="bo-sidebar-logo">
    <%= link_to bo_path, class: "bo-logo-link" do %>
      <div class="bo-logo-icon">
        <svg viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect width="32" height="32" rx="8" fill="#008060"/>
          <path d="M8 10L8 22L12 22L12 14L16 22L20 14L20 22L24 22L24 10L20 10L16 16L12 10L8 10Z" fill="white"/>
        </svg>
      </div>
      <span class="bo-logo-text">nodal</span>
    <% end %>
  </div>

  <ul class="bo-sidebar-nav">
    <li class="bo-sidebar-item <%= 'active' if controller_name == 'dashboard' %>">
      <%= link_to bo_path do %>
        <i class="fa-solid fa-chart-line"></i>
        <span>Dashboard</span>
      <% end %>
    </li>
    <li class="bo-sidebar-item <%= 'active' if controller_name == 'customers' %>">
      <%= link_to bo_customers_path do %>
        <i class="fa-solid fa-users"></i>
        <span>Customers</span>
      <% end %>
    </li>
    <li class="bo-sidebar-item <%= 'active' if controller_name == 'products' %>">
      <%= link_to bo_products_path do %>
        <i class="fa-solid fa-box"></i>
        <span>Products</span>
      <% end %>
    </li>
    <li class="bo-sidebar-item <%= 'active' if controller_name == 'orders' %>">
      <%= link_to bo_orders_path do %>
        <i class="fa-solid fa-clipboard-list"></i>
        <span>Orders</span>
      <% end %>
    </li>
  </ul>

  <!-- Bottom Navigation -->
  <ul class="bo-sidebar-nav-bottom">
    <li class="bo-sidebar-item" data-tooltip="Profile">
      <%= link_to "#" do %>
        <i class="fa-solid fa-circle-user"></i>
        <span>Profile</span>
      <% end %>
    </li>
    <li class="bo-sidebar-item" data-tooltip="Settings">
      <%= link_to "#" do %>
        <i class="fa-solid fa-gear"></i>
        <span>Settings</span>
      <% end %>
    </li>
    <li class="bo-sidebar-item" data-tooltip="Log out">
      <%= link_to destroy_member_session_path, data: { turbo_method: :delete } do %>
        <i class="fa-solid fa-right-from-bracket"></i>
        <span>Log out</span>
      <% end %>
    </li>
  </ul>
</aside>
