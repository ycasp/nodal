<% content_for :bo_main_content do%>

<div class="mb-4">
  <div class="d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-3">
      <%= link_to bo_team_members_path(params[:org_slug]), class: "text-muted" do %>
        <i class="fa-solid fa-arrow-left"></i>
      <% end %>

      <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center text-white fw-bold" style="width: 60px; height: 60px; font-size: 1.25rem;">
        <% if @org_member.member.present? %>
          <%= @org_member.member.first_name&.first&.upcase %><%= @org_member.member.last_name&.first&.upcase %>
        <% else %>
          <i class="fa-solid fa-envelope"></i>
        <% end %>
      </div>

      <div>
        <h4 class="mb-0">Edit Team Member</h4>
        <span class="text-muted"><%= @org_member.display_name %></span>
      </div>
    </div>

    <div class="d-flex gap-2 align-items-center">
      <%= link_to bo_team_members_path(params[:org_slug]), class: "btn btn-outline-secondary" do %>
        Cancel
      <% end %>
      <button type="submit" form="edit-form" class="btn btn-primary">
        <i class="fa-solid fa-check"></i> Save Changes
      </button>
    </div>
  </div>
</div>

<%= form_with model: @org_member, url: bo_team_member_path(params[:org_slug], @org_member), method: :patch, id: "edit-form" do |f| %>
  <div class="row g-3">
    <div class="col-md-8">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title mb-4">Member Information</h5>

          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label">Name</label>
              <p class="form-control-plaintext"><%= @org_member.display_name %></p>
            </div>
            <div class="col-md-6">
              <label class="form-label">Email</label>
              <p class="form-control-plaintext"><%= @org_member.display_email %></p>
            </div>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-4">Role & Status</h5>

          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label">Role</label>
              <%= f.select :role, [
                ['Member', 'member'],
                ['Admin', 'admin'],
                ['Owner', 'owner']
              ], {}, class: "form-select" %>
            </div>
            <div class="col-md-6">
              <label class="form-label">Status</label>
              <div class="form-check form-switch mt-2">
                <%= f.check_box :active, class: "form-check-input", role: "switch", id: "activeSwitch" %>
                <label class="form-check-label" for="activeSwitch">Active</label>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-4">Member Info</h5>

          <div class="border-bottom pb-3 mb-3">
            <small class="text-muted d-block">Current Role</small>
            <span class="badge <%= @org_member.role == 'owner' ? 'bg-danger' : @org_member.role == 'admin' ? 'bg-warning text-dark' : 'bg-secondary' %>">
              <%= @org_member.role.capitalize %>
            </span>
          </div>

          <div class="border-bottom pb-3 mb-3">
            <small class="text-muted d-block">Status</small>
            <% if @org_member.pending_invitation? %>
              <span class="badge bg-info">Pending Invitation</span>
            <% elsif @org_member.active? %>
              <span class="badge bg-success">Active</span>
            <% else %>
              <span class="badge bg-secondary">Inactive</span>
            <% end %>
          </div>

          <% if @org_member.joined_at.present? %>
            <div class="border-bottom pb-3 mb-3">
              <small class="text-muted d-block">Joined</small>
              <span><%= @org_member.joined_at.strftime("%-m/%-d/%Y") %></span>
            </div>
          <% end %>

          <% if @org_member.invited_by.present? %>
            <div>
              <small class="text-muted d-block">Invited By</small>
              <span><%= @org_member.invited_by.first_name %> <%= @org_member.invited_by.last_name %></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% end %>
