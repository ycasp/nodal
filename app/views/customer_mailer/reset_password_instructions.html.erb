<!-- Security icon header -->
<table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0" style="margin: 0 0 32px 0;">
  <tr>
    <td align="center">
      <table role="presentation" cellspacing="0" cellpadding="0" border="0">
        <tr>
          <td style="background-color: #fef3c7; border-radius: 50%; width: 64px; height: 64px; text-align: center; vertical-align: middle;">
            <span style="font-size: 28px; line-height: 64px;">üîê</span>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<h1 style="margin: 0 0 24px 0; font-size: 24px; font-weight: 700; color: #1a1a1a; text-align: center;">
  Password Reset Request
</h1>

<p style="margin: 0 0 8px 0; font-size: 16px;">Hello <strong><%= @resource.contact_name %></strong>,</p>

<p style="margin: 0 0 32px 0; color: #4b5563; line-height: 1.6;">
  We received a request to reset the password for your account. Click the button below to create a new password.
</p>

<table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0" style="margin: 0 0 32px 0;">
  <tr>
    <td align="center">
      <table role="presentation" cellspacing="0" cellpadding="0" border="0">
        <tr>
          <td style="background-color: #008060; border-radius: 8px;">
            <%= link_to 'Reset Password',
                edit_customer_password_url(@resource, reset_password_token: @token, org_slug: @resource.organisation.slug),
                style: 'display: inline-block; padding: 16px 40px; color: #ffffff; text-decoration: none; font-weight: 600; font-size: 16px;' %>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<!-- Security notice -->
<table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0" style="margin: 0 0 24px 0;">
  <tr>
    <td style="padding: 16px 20px; background-color: #f9fafb; border-radius: 8px; border: 1px solid #e5e5e5;">
      <p style="margin: 0 0 8px 0; font-size: 13px; font-weight: 600; color: #6b7177;">Didn't request this?</p>
      <p style="margin: 0; font-size: 13px; color: #9ca3af; line-height: 1.5;">
        If you didn't request a password reset, you can safely ignore this email. Your password will remain unchanged.
      </p>
    </td>
  </tr>
</table>

<p style="margin: 0; color: #9ca3af; font-size: 12px; text-align: center;">
  This link will expire in 6 hours for security reasons.
</p>
