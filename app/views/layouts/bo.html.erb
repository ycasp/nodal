<!DOCTYPE html>
<html>
  <head>
    <title>Nodal</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render "bo/shared/bo_sidebar" %>
    <%= render "bo/shared/bo_navbar" %>

    <main class="bo-main-content">
      <!-- Mobile sidebar toggle -->
      <button class="mobile-sidebar-toggle" data-action="click->sidebar#toggleMobile" aria-label="Open menu">
        <i class="fa-solid fa-bars"></i>
      </button>

      <%= yield :bo_main_content %>
    </main>

    <%= render "shared/flashes" %>
  </body>
</html>
