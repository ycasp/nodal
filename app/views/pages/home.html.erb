          <line x1="1120" y1="100" x2="900" y2="50" stroke-opacity="0.25"/>
          <line x1="80" y1="500" x2="300" y2="550" stroke-opacity="0.25"/>
          <line x1="1120" y1="500" x2="900" y2="550" stroke-opacity="0.25"/>
