<!-- Landing Page for Nodal - B2B Ordering Platform for SMBs -->
<!-- Content based on The-Problem.pdf -->

<div class="landing-page">
  <!-- ========================================
       SECTION 1: NAVIGATION
       ======================================== -->
  <%= render "shared/navbar" %>

  <!-- ========================================
       SECTION 2: HERO
       Purpose: Primary value proposition
       ======================================== -->
  <section class="hero-section" aria-labelledby="hero-heading">
    <!-- Network Animation Background -->
    <div class="hero-background">
      <svg class="network-svg" viewBox="0 0 1200 600" preserveAspectRatio="xMidYMid slice">
        <defs>
          <filter id="glow">
            <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
            <feMerge>
              <feMergeNode in="coloredBlur"/>
              <feMergeNode in="SourceGraphic"/>
            </feMerge>
          </filter>
        </defs>

        <!-- Connection lines across the hero -->
        <g class="connections" stroke="#3ee8c8" stroke-opacity="0.15" stroke-width="1.5" fill="none">
          <path id="bgPath1" d="M80,100 Q300,200 600,300"/>
          <path id="bgPath2" d="M80,300 Q300,250 600,300"/>
          <path id="bgPath3" d="M80,500 Q300,400 600,300"/>
          <path id="bgPath4" d="M1120,100 Q900,200 600,300"/>
          <path id="bgPath5" d="M1120,300 Q900,250 600,300"/>
          <path id="bgPath6" d="M1120,500 Q900,400 600,300"/>
          <path id="bgPath7" d="M300,50 Q450,150 600,300"/>
          <path id="bgPath8" d="M900,50 Q750,150 600,300"/>
          <path id="bgPath9" d="M300,550 Q450,450 600,300"/>
          <path id="bgPath10" d="M900,550 Q750,450 600,300"/>
          <!-- Cross connections -->
          <line x1="80" y1="100" x2="300" y2="50" stroke-opacity="0.1"/>
          <line x1="1120" y1="100" x2="900" y2="50" stroke-opacity="0.1"/>
          <line x1="80" y1="500" x2="300" y2="550" stroke-opacity="0.1"/>
          <line x1="1120" y1="500" x2="900" y2="550" stroke-opacity="0.1"/>
        </g>

        <!-- Animated pulses -->
        <g class="pulses" filter="url(#glow)">
          <circle r="5" fill="#3ee8c8">
            <animateMotion dur="4s" repeatCount="indefinite">
              <mpath href="#bgPath1"/>
            </animateMotion>
          </circle>
          <circle r="4" fill="#14b8a6">
            <animateMotion dur="3.5s" repeatCount="indefinite" begin="0.5s">
              <mpath href="#bgPath2"/>
            </animateMotion>
          </circle>
          <circle r="5" fill="#3ee8c8">
            <animateMotion dur="4.2s" repeatCount="indefinite" begin="1s">
              <mpath href="#bgPath3"/>
            </animateMotion>
          </circle>
          <circle r="4" fill="#14b8a6">
            <animateMotion dur="3.8s" repeatCount="indefinite" begin="1.5s">
              <mpath href="#bgPath4"/>
            </animateMotion>
          </circle>
          <circle r="5" fill="#3ee8c8">
            <animateMotion dur="3.5s" repeatCount="indefinite" begin="2s">
              <mpath href="#bgPath5"/>
            </animateMotion>
          </circle>
          <circle r="4" fill="#14b8a6">
            <animateMotion dur="4s" repeatCount="indefinite" begin="2.5s">
              <mpath href="#bgPath6"/>
            </animateMotion>
          </circle>
          <circle r="4" fill="#3ee8c8">
            <animateMotion dur="4.5s" repeatCount="indefinite" begin="0.3s">
              <mpath href="#bgPath7"/>
            </animateMotion>
          </circle>
          <circle r="4" fill="#14b8a6">
            <animateMotion dur="4.3s" repeatCount="indefinite" begin="1.8s">
              <mpath href="#bgPath8"/>
            </animateMotion>
          </circle>
        </g>

        <!-- Business nodes spread across background -->
        <g class="nodes">
          <!-- Left side -->
          <!-- Node 1: Calculator/Invoice icon -->
          <g class="node">
            <circle cx="80" cy="100" r="30" fill="#1e293b" stroke="#3ee8c8" stroke-width="1.5" opacity="0.6"/>
            <g transform="translate(80, 100)">
              <rect x="-8" y="-10" width="16" height="18" fill="none" stroke="#3ee8c8" stroke-width="1.2" rx="2"/>
              <line x1="-5" y1="-6" x2="5" y2="-6" stroke="#3ee8c8" stroke-width="1"/>
              <line x1="-5" y1="-2" x2="5" y2="-2" stroke="#3ee8c8" stroke-width="1"/>
              <line x1="-5" y1="2" x2="2" y2="2" stroke="#3ee8c8" stroke-width="1"/>
              <circle cx="4" cy="5" r="2" fill="none" stroke="#3ee8c8" stroke-width="1"/>
            </g>
          </g>
          <!-- Node 2: Chart/Analytics icon -->
          <g class="node">
            <circle cx="80" cy="300" r="30" fill="#1e293b" stroke="#3ee8c8" stroke-width="1.5" opacity="0.6"/>
            <g transform="translate(80, 300)">
              <polyline points="-8,6 -8,-8 10,-8" fill="none" stroke="#3ee8c8" stroke-width="1.2"/>
              <polyline points="-5,4 -1,-2 3,1 7,-5" fill="none" stroke="#3ee8c8" stroke-width="1.5"/>
              <circle cx="7" cy="-5" r="2" fill="#3ee8c8"/>
            </g>
          </g>
          <!-- Node 3: Delivery truck icon -->
          <g class="node">
            <circle cx="80" cy="500" r="30" fill="#1e293b" stroke="#3ee8c8" stroke-width="1.5" opacity="0.6"/>
            <g transform="translate(80, 500)">
              <rect x="-10" y="-5" width="12" height="8" fill="none" stroke="#3ee8c8" stroke-width="1.2" rx="1"/>
              <path d="M2,-5 L2,3 L8,3 L8,-1 L5,-5 Z" fill="none" stroke="#3ee8c8" stroke-width="1.2"/>
              <circle cx="-5" cy="5" r="2.5" fill="none" stroke="#3ee8c8" stroke-width="1.2"/>
              <circle cx="5" cy="5" r="2.5" fill="none" stroke="#3ee8c8" stroke-width="1.2"/>
            </g>
          </g>

          <!-- Right side -->
          <!-- Node 4: Warehouse/Building icon -->
          <g class="node">
            <circle cx="1120" cy="100" r="30" fill="#1e293b" stroke="#14b8a6" stroke-width="1.5" opacity="0.6"/>
            <g transform="translate(1120, 100)">
              <path d="M-10,-6 L-10,6 L10,6 L10,-6 L-10,-6 M-10,-6 L-7,-11 L7,-11 L10,-6" fill="none" stroke="#14b8a6" stroke-width="1.2"/>
              <rect x="-2" y="0" width="4" height="6" fill="none" stroke="#14b8a6" stroke-width="1.2"/>
            </g>
          </g>
          <!-- Node 5: Person/Customer icon -->
          <g class="node">
            <circle cx="1120" cy="300" r="30" fill="#1e293b" stroke="#14b8a6" stroke-width="1.5" opacity="0.6"/>
            <g transform="translate(1120, 300)">
              <circle cx="0" cy="-4" r="5" fill="none" stroke="#14b8a6" stroke-width="1.2"/>
              <path d="M-8,8 Q-8,0 0,0 Q8,0 8,8" fill="none" stroke="#14b8a6" stroke-width="1.2"/>
            </g>
          </g>
          <!-- Node 6: Handshake/Partnership icon -->
          <g class="node">
            <circle cx="1120" cy="500" r="30" fill="#1e293b" stroke="#14b8a6" stroke-width="1.5" opacity="0.6"/>
            <g transform="translate(1120, 500)">
              <path d="M-8,-2 L-4,2 L0,-1 L4,2 L8,-2" fill="none" stroke="#14b8a6" stroke-width="1.5"/>
              <path d="M-6,4 L-2,0" fill="none" stroke="#14b8a6" stroke-width="1.2"/>
              <path d="M6,4 L2,0" fill="none" stroke="#14b8a6" stroke-width="1.2"/>
              <circle cx="-8" cy="-2" r="2" fill="#14b8a6"/>
              <circle cx="8" cy="-2" r="2" fill="#14b8a6"/>
            </g>
          </g>

          <!-- Top -->
          <!-- Node 7: Shopping cart icon -->
          <g class="node">
            <circle cx="300" cy="50" r="24" fill="#1e293b" stroke="#3ee8c8" stroke-width="1.5" opacity="0.5"/>
            <g transform="translate(300, 50)">
              <path d="M-7,0 L-5,-4 L6,-4 L7,2 L-3,2" fill="none" stroke="#3ee8c8" stroke-width="1.2"/>
              <circle cx="-2" cy="5" r="2" fill="none" stroke="#3ee8c8" stroke-width="1"/>
              <circle cx="5" cy="5" r="2" fill="none" stroke="#3ee8c8" stroke-width="1"/>
            </g>
          </g>
          <!-- Node 8: Credit card/Payment icon -->
          <g class="node">
            <circle cx="900" cy="50" r="24" fill="#1e293b" stroke="#14b8a6" stroke-width="1.5" opacity="0.5"/>
            <g transform="translate(900, 50)">
              <rect x="-8" y="-5" width="16" height="10" fill="none" stroke="#14b8a6" stroke-width="1.2" rx="1"/>
              <line x1="-8" y1="-1" x2="8" y2="-1" stroke="#14b8a6" stroke-width="2"/>
              <line x1="-5" y1="2" x2="0" y2="2" stroke="#14b8a6" stroke-width="1"/>
            </g>
          </g>

          <!-- Bottom -->
          <!-- Node 9: Box/Package icon -->
          <g class="node">
            <circle cx="300" cy="550" r="24" fill="#1e293b" stroke="#14b8a6" stroke-width="1.5" opacity="0.5"/>
            <g transform="translate(300, 550)">
              <rect x="-6" y="-4" width="12" height="10" fill="none" stroke="#14b8a6" stroke-width="1.2"/>
              <line x1="0" y1="-4" x2="0" y2="6" stroke="#14b8a6" stroke-width="1"/>
              <path d="M-6,-4 L0,-7 L6,-4" fill="none" stroke="#14b8a6" stroke-width="1.2"/>
            </g>
          </g>
          <!-- Node 10: Globe/International icon -->
          <g class="node">
            <circle cx="900" cy="550" r="24" fill="#1e293b" stroke="#3ee8c8" stroke-width="1.5" opacity="0.5"/>
            <g transform="translate(900, 550)">
              <circle cx="0" cy="0" r="7" fill="none" stroke="#3ee8c8" stroke-width="1.2"/>
              <ellipse cx="0" cy="0" rx="3" ry="7" fill="none" stroke="#3ee8c8" stroke-width="1"/>
              <line x1="-7" y1="0" x2="7" y2="0" stroke="#3ee8c8" stroke-width="1"/>
            </g>
          </g>

          <!-- Center: Nodal hub - GLOWING RING EFFECT (moved up) -->
          <g class="node node-center" transform="translate(0, -120)">
            <!-- Glow filter for rings -->
            <defs>
              <filter id="ringGlow" x="-100%" y="-100%" width="300%" height="300%">
                <feGaussianBlur stdDeviation="6" result="blur"/>
                <feMerge>
                  <feMergeNode in="blur"/>
                  <feMergeNode in="blur"/>
                  <feMergeNode in="SourceGraphic"/>
                </feMerge>
              </filter>
              <linearGradient id="ringGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" stop-color="#00d4aa"/>
                <stop offset="50%" stop-color="#008060"/>
                <stop offset="100%" stop-color="#004c3f"/>
              </linearGradient>
            </defs>

            <!-- Pulsing glow rings that expand outward -->
            <g class="glow-rings" filter="url(#ringGlow)">
              <!-- Ring 1 - continuous pulse -->
              <circle cx="600" cy="300" r="50" fill="none" stroke="url(#ringGradient)" stroke-width="3" opacity="0">
                <animate attributeName="r" values="50;120" dur="3s" repeatCount="indefinite"/>
                <animate attributeName="opacity" values="0.8;0" dur="3s" repeatCount="indefinite"/>
                <animate attributeName="stroke-width" values="3;1" dur="3s" repeatCount="indefinite"/>
              </circle>
              <!-- Ring 2 - offset timing -->
              <circle cx="600" cy="300" r="50" fill="none" stroke="url(#ringGradient)" stroke-width="3" opacity="0">
                <animate attributeName="r" values="50;120" dur="3s" repeatCount="indefinite" begin="1s"/>
                <animate attributeName="opacity" values="0.8;0" dur="3s" repeatCount="indefinite" begin="1s"/>
                <animate attributeName="stroke-width" values="3;1" dur="3s" repeatCount="indefinite" begin="1s"/>
              </circle>
              <!-- Ring 3 - offset timing -->
              <circle cx="600" cy="300" r="50" fill="none" stroke="url(#ringGradient)" stroke-width="3" opacity="0">
                <animate attributeName="r" values="50;120" dur="3s" repeatCount="indefinite" begin="2s"/>
                <animate attributeName="opacity" values="0.8;0" dur="3s" repeatCount="indefinite" begin="2s"/>
                <animate attributeName="stroke-width" values="3;1" dur="3s" repeatCount="indefinite" begin="2s"/>
              </circle>
            </g>

            <!-- Static outer ring -->
            <circle cx="600" cy="300" r="52" fill="none" stroke="#008060" stroke-width="2" opacity="0.3"/>

            <!-- Main hub circle - solid white background -->
            <circle cx="600" cy="300" r="46" fill="#ffffff" stroke="#008060" stroke-width="2.5"/>

            <!-- Inner accent ring -->
            <circle cx="600" cy="300" r="38" fill="none" stroke="#008060" stroke-width="1" opacity="0.2"/>

            <!-- NODAL text - PROMINENT -->
            <text x="600" y="306" text-anchor="middle" fill="#008060" font-weight="800" font-size="18" letter-spacing="3" class="nodal-text">NODAL</text>

            <!-- Connection dots around hub with pulse -->
            <g class="hub-dots">
              <circle cx="600" cy="243" r="5" fill="#008060" opacity="0.7">
                <animate attributeName="r" values="5;7;5" dur="2s" repeatCount="indefinite"/>
                <animate attributeName="opacity" values="0.7;1;0.7" dur="2s" repeatCount="indefinite"/>
              </circle>
              <circle cx="600" cy="357" r="5" fill="#008060" opacity="0.7">
                <animate attributeName="r" values="5;7;5" dur="2s" repeatCount="indefinite" begin="0.5s"/>
                <animate attributeName="opacity" values="0.7;1;0.7" dur="2s" repeatCount="indefinite" begin="0.5s"/>
              </circle>
              <circle cx="543" cy="300" r="5" fill="#008060" opacity="0.7">
                <animate attributeName="r" values="5;7;5" dur="2s" repeatCount="indefinite" begin="1s"/>
                <animate attributeName="opacity" values="0.7;1;0.7" dur="2s" repeatCount="indefinite" begin="1s"/>
              </circle>
              <circle cx="657" cy="300" r="5" fill="#008060" opacity="0.7">
                <animate attributeName="r" values="5;7;5" dur="2s" repeatCount="indefinite" begin="1.5s"/>
                <animate attributeName="opacity" values="0.7;1;0.7" dur="2s" repeatCount="indefinite" begin="1.5s"/>
              </circle>
            </g>
          </g>
        </g>
      </svg>
    </div>

    <div class="container">
      <div class="hero-content">
        <div class="hero-text">
          <h1 id="hero-heading" class="hero-headline">
            Connecting Businesses Through Smarter Orders
          </h1>
          <p class="hero-subheadline">
            A plug-and-play B2B ordering platform built specifically for small and medium businesses. No developers required, no complex setup — just smart ordering that works.
          </p>
          <div class="hero-cta-group">
            <%= link_to "Get Started", "#", class: "btn btn-primary btn-lg hero-cta-primary" %>
            <%= link_to "Book a Demo", "#", class: "btn btn-outline-light btn-lg hero-cta-secondary" %>
          </div>
          <p class="hero-disclaimer">No credit card required • Launch in minutes</p>
        </div>
        <div class="hero-visual">
          <!-- Animated Dashboard Preview (Light Theme) -->
          <div class="dashboard-preview">
            <!-- Browser chrome -->
            <div class="browser-chrome">
              <span class="browser-dot red"></span>
              <span class="browser-dot yellow"></span>
              <span class="browser-dot green"></span>
              <span class="browser-url">app.nodal.io</span>
            </div>

            <!-- Dashboard UI -->
            <div class="dashboard-ui">
              <!-- Sidebar -->
              <div class="ui-sidebar">
                <div class="ui-logo">N</div>
                <div class="ui-nav-item active"></div>
                <div class="ui-nav-item"></div>
                <div class="ui-nav-item"></div>
                <div class="ui-nav-item"></div>
              </div>

              <!-- Main content -->
              <div class="ui-main">
                <!-- Stats row -->
                <div class="ui-stats">
                  <div class="ui-stat">
                    <div class="ui-stat-value">1,247</div>
                    <div class="ui-stat-label">Orders</div>
                  </div>
                  <div class="ui-stat highlight">
                    <div class="ui-stat-value">€89.4k</div>
                    <div class="ui-stat-label">Revenue</div>
                  </div>
                  <div class="ui-stat">
                    <div class="ui-stat-value">156</div>
                    <div class="ui-stat-label">Clients</div>
                  </div>
                </div>

                <!-- Animated chart -->
                <div class="ui-chart">
                  <div class="chart-bar bar-1"></div>
                  <div class="chart-bar bar-2"></div>
                  <div class="chart-bar bar-3"></div>
                  <div class="chart-bar bar-4"></div>
                  <div class="chart-bar bar-5"></div>
                  <div class="chart-bar bar-6"></div>
                  <div class="chart-bar bar-7"></div>
                </div>

                <!-- Order list with new orders appearing -->
                <div class="ui-orders">
                  <div class="ui-order order-1">
                    <span class="order-dot"></span>
                    <span class="order-text"></span>
                    <span class="order-badge">New</span>
                  </div>
                  <div class="ui-order order-2">
                    <span class="order-dot"></span>
                    <span class="order-text"></span>
                    <span class="order-badge success">Done</span>
                  </div>
                  <div class="ui-order order-3">
                    <span class="order-dot"></span>
                    <span class="order-text"></span>
                    <span class="order-badge success">Done</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ========================================
       SECTION 3: THE PROBLEM
       Purpose: Identify pain points customers face
       ======================================== -->
  <section class="problem-section" aria-labelledby="problem-heading">
    <div class="container">
      <header class="section-header">
        <h2 id="problem-heading" class="section-title">The Problem</h2>
        <p class="section-subtitle">
          Most small and medium businesses still manage B2B sales through WhatsApp, Excel, or email — a patchwork of disconnected tools that slow down operations, create errors, and make growth nearly impossible.
        </p>
      </header>

      <div class="problems-grid">
        <!-- Problem 1: Scattered Communication -->
        <article class="problem-card">
          <div class="problem-icon" data-placeholder="communication-icon">
            <i class="fas fa-comments"></i>
          </div>
          <h3 class="problem-title">Scattered Communication</h3>
          <p class="problem-description">
            Orders buried in WhatsApp threads and email chains
          </p>
        </article>

        <!-- Problem 2: Manual Processing -->
        <article class="problem-card">
          <div class="problem-icon" data-placeholder="manual-icon">
            <i class="fas fa-file-excel"></i>
          </div>
          <h3 class="problem-title">Manual Processing</h3>
          <p class="problem-description">
            Endless Excel sheets prone to mistakes and delays
          </p>
        </article>

        <!-- Problem 3: No Visibility -->
        <article class="problem-card">
          <div class="problem-icon" data-placeholder="visibility-icon">
            <i class="fas fa-eye-slash"></i>
          </div>
          <h3 class="problem-title">No Visibility</h3>
          <p class="problem-description">
            Zero insight into client behavior or sales trends
          </p>
        </article>
      </div>

      <p class="problem-result">
        The result? <strong>Missed orders, frustrated clients, and operations teams stuck doing administrative work instead of growing the business.</strong>
      </p>
    </div>
  </section>

  <!-- ========================================
       SECTION 4: FEATURES (Core Platform Capabilities)
       Purpose: Explain what Nodal does
       ======================================== -->
  <section class="features-section" aria-labelledby="features-heading">
    <div class="container">
      <header class="section-header">
        <h2 id="features-heading" class="section-title">Smart B2B Ordering, Made Simple</h2>
        <p class="section-subtitle">Everything you need to run your B2B sales — in one platform</p>
      </header>

      <div class="features-grid">
        <!-- Feature 1: Smart Catalog Management -->
        <article class="feature-card">
          <div class="feature-icon" data-placeholder="catalog-icon">
            <i class="fas fa-th-large"></i>
          </div>
          <h3 class="feature-title">Smart Catalog Management</h3>
          <p class="feature-description">
            Expose and organize your entire product catalog with custom pricing rules
          </p>
        </article>

        <!-- Feature 2: Client-Specific Pricing -->
        <article class="feature-card">
          <div class="feature-icon" data-placeholder="pricing-icon">
            <i class="fas fa-tags"></i>
          </div>
          <h3 class="feature-title">Client-Specific Pricing</h3>
          <p class="feature-description">
            Set personalized prices and discounts for each client automatically
          </p>
        </article>

        <!-- Feature 3: Effortless Ordering -->
        <article class="feature-card">
          <div class="feature-icon" data-placeholder="ordering-icon">
            <i class="fas fa-shopping-cart"></i>
          </div>
          <h3 class="feature-title">Effortless Ordering</h3>
          <p class="feature-description">
            Clients can browse, order, track shipments, and reorder with one click
