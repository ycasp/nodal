<!-- Landing Page for Nodal - B2B Ordering Platform for SMBs -->
<!-- Content based on The-Problem.pdf -->

<div class="landing-page">
  <!-- ========================================
       SECTION 1: NAVIGATION
       ======================================== -->
  <%= render "shared/navbar" %>

  <!-- ========================================
       SECTION 2: HERO
       Purpose: Primary value proposition
       ======================================== -->
  <section class="hero-section" aria-labelledby="hero-heading">
    <!-- Video Background -->
    <div class="hero-background" data-controller="hero-video">
      <div class="video-container">
        <video class="hero-video active" autoplay muted loop playsinline data-hero-video-target="video">
          <source src="/videos/8540430-hd_1920_1080_30fps.mp4" type="video/mp4">
        </video>
        <video class="hero-video" autoplay muted loop playsinline data-hero-video-target="video">
          <source src="/videos/7287516-uhd_3840_2160_25fps.mp4" type="video/mp4">
        </video>
        <video class="hero-video" autoplay muted loop playsinline data-hero-video-target="video">
          <source src="/videos/6169116-uhd_3840_2160_25fps.mp4" type="video/mp4">
        </video>
        <video class="hero-video" autoplay muted loop playsinline data-hero-video-target="video">
          <source src="/videos/8725959-uhd_3840_2160_25fps.mp4" type="video/mp4">
        </video>
      </div>
      <div class="hero-overlay"></div>
    </div>

    <div class="container">
      <div class="hero-content">
        <div class="hero-text">
          <h1 id="hero-heading" class="hero-headline">
            Connecting Businesses Through Smarter Orders
          </h1>
          <p class="hero-subheadline">
            A plug-and-play B2B ordering platform built specifically for small and medium businesses. No developers required, no complex setup — just smart ordering that works.
          </p>
          <div class="hero-cta-group">
            <%= link_to "Get Started", "#", class: "btn btn-primary btn-lg hero-cta-primary" %>
            <%= link_to "Book a Demo", "#", class: "btn btn-outline-light btn-lg hero-cta-secondary" %>
          </div>
          <p class="hero-disclaimer">No credit card required • Launch in minutes</p>
        </div>
        <div class="hero-visual">
          <!-- Animated Dashboard Preview (Light Theme) -->
          <div class="dashboard-preview">
            <!-- Browser chrome -->
            <div class="browser-chrome">
              <span class="browser-dot red"></span>
              <span class="browser-dot yellow"></span>
              <span class="browser-dot green"></span>
              <span class="browser-url">app.nodal.io</span>
            </div>

            <!-- Dashboard UI -->
            <div class="dashboard-ui">
              <!-- Sidebar -->
              <div class="ui-sidebar">
                <div class="ui-logo">N</div>
                <div class="ui-nav-item active"></div>
                <div class="ui-nav-item"></div>
                <div class="ui-nav-item"></div>
                <div class="ui-nav-item"></div>
              </div>

              <!-- Main content -->
              <div class="ui-main">
                <!-- Stats row -->
                <div class="ui-stats">
                  <div class="ui-stat">
                    <div class="ui-stat-value">1,247</div>
                    <div class="ui-stat-label">Orders</div>
                  </div>
                  <div class="ui-stat highlight">
                    <div class="ui-stat-value">€89.4k</div>
                    <div class="ui-stat-label">Revenue</div>
                  </div>
                  <div class="ui-stat">
                    <div class="ui-stat-value">156</div>
                    <div class="ui-stat-label">Clients</div>
                  </div>
                </div>

                <!-- Animated chart -->
                <div class="ui-chart">
                  <div class="chart-bar bar-1"></div>
                  <div class="chart-bar bar-2"></div>
                  <div class="chart-bar bar-3"></div>
                  <div class="chart-bar bar-4"></div>
                  <div class="chart-bar bar-5"></div>
                  <div class="chart-bar bar-6"></div>
                  <div class="chart-bar bar-7"></div>
                </div>

                <!-- Order list with new orders appearing -->
                <div class="ui-orders">
                  <div class="ui-order order-1">
                    <span class="order-dot"></span>
                    <span class="order-text"></span>
                    <span class="order-badge">New</span>
                  </div>
                  <div class="ui-order order-2">
                    <span class="order-dot"></span>
                    <span class="order-text"></span>
                    <span class="order-badge success">Done</span>
                  </div>
                  <div class="ui-order order-3">
                    <span class="order-dot"></span>
                    <span class="order-text"></span>
                    <span class="order-badge success">Done</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ========================================
       SECTION 3: THE PROBLEM
       Purpose: Identify pain points customers face
       ======================================== -->
  <section class="problem-section" aria-labelledby="problem-heading">
    <div class="container">
      <header class="section-header">
        <h2 id="problem-heading" class="section-title">The Problem</h2>
        <p class="section-subtitle">
          Most small and medium businesses still manage B2B sales through WhatsApp, Excel, or email — a patchwork of disconnected tools that slow down operations, create errors, and make growth nearly impossible.
        </p>
      </header>

      <div class="problems-grid">
        <!-- Problem 1: Scattered Communication -->
        <article class="problem-card">
          <div class="problem-icon" data-placeholder="communication-icon">
            <i class="fas fa-comments"></i>
          </div>
          <h3 class="problem-title">Scattered Communication</h3>
          <p class="problem-description">
            Orders buried in WhatsApp threads and email chains
          </p>
        </article>

        <!-- Problem 2: Manual Processing -->
        <article class="problem-card">
          <div class="problem-icon" data-placeholder="manual-icon">
            <i class="fas fa-file-excel"></i>
          </div>
          <h3 class="problem-title">Manual Processing</h3>
          <p class="problem-description">
            Endless Excel sheets prone to mistakes and delays
          </p>
        </article>

        <!-- Problem 3: No Visibility -->
        <article class="problem-card">
          <div class="problem-icon" data-placeholder="visibility-icon">
            <i class="fas fa-eye-slash"></i>
          </div>
          <h3 class="problem-title">No Visibility</h3>
          <p class="problem-description">
            Zero insight into client behavior or sales trends
          </p>
        </article>
      </div>

      <p class="problem-result">
        The result? <strong>Missed orders, frustrated clients, and operations teams stuck doing administrative work instead of growing the business.</strong>
      </p>
    </div>
  </section>

  <!-- ========================================
       SECTION 4: FEATURES (Core Platform Capabilities)
       Purpose: Explain what Nodal does
       ======================================== -->
  <section class="features-section" aria-labelledby="features-heading">
    <div class="container">
      <header class="section-header">
        <h2 id="features-heading" class="section-title">Smart B2B Ordering, Made Simple</h2>
        <p class="section-subtitle">Everything you need to run your B2B sales — in one platform</p>
      </header>

      <div class="features-grid">
        <!-- Feature 1: Smart Catalog Management -->
        <article class="feature-card">
          <div class="feature-icon" data-placeholder="catalog-icon">
            <i class="fas fa-th-large"></i>
          </div>
          <h3 class="feature-title">Smart Catalog Management</h3>
          <p class="feature-description">
            Expose and organize your entire product catalog with custom pricing rules
          </p>
        </article>

        <!-- Feature 2: Client-Specific Pricing -->
        <article class="feature-card">
          <div class="feature-icon" data-placeholder="pricing-icon">
            <i class="fas fa-tags"></i>
          </div>
          <h3 class="feature-title">Client-Specific Pricing</h3>
          <p class="feature-description">
            Set personalized prices and discounts for each client automatically
          </p>
        </article>

        <!-- Feature 3: Effortless Ordering -->
        <article class="feature-card">
          <div class="feature-icon" data-placeholder="ordering-icon">
            <i class="fas fa-shopping-cart"></i>
          </div>
          <h3 class="feature-title">Effortless Ordering</h3>
          <p class="feature-description">
            Clients can browse, order, track shipments, and reorder with one click
          </p>
        </article>

        <!-- Feature 4: AI-Powered Insights -->
        <article class="feature-card">
          <div class="feature-icon" data-placeholder="ai-icon">
            <i class="fas fa-brain"></i>
          </div>
          <h3 class="feature-title">AI-Powered Insights</h3>
          <p class="feature-description">
            Understand sales patterns and client behavior to make smarter decisions
          </p>
        </article>
      </div>
    </div>
  </section>

  <!-- ========================================
       SECTION 5: WHY NODAL
       Purpose: Key differentiators
       ======================================== -->
  <section class="why-section" aria-labelledby="why-heading">
    <div class="container">
      <header class="section-header">
        <h2 id="why-heading" class="section-title">Why Nodal?</h2>
        <p class="section-subtitle">The smart link between businesses</p>
      </header>

      <div class="why-grid">
        <!-- Reason 1 -->
        <div class="why-card">
          <div class="why-number">01</div>
          <h3 class="why-title">Plug-and-Play Setup</h3>
          <p class="why-description">
            Launch your B2B store in minutes — no developer or technical expertise needed
          </p>
        </div>

        <!-- Reason 2 -->
        <div class="why-card">
          <div class="why-number">02</div>
          <h3 class="why-title">AI-Powered Intelligence</h3>
          <p class="why-description">
            Get actionable insights on sales trends, client preferences, and inventory needs
          </p>
        </div>

        <!-- Reason 3 -->
        <div class="why-card">
          <div class="why-number">03</div>
          <h3 class="why-title">Built for SMBs</h3>
          <p class="why-description">
            Affordable SaaS pricing designed for growing businesses, not enterprise budgets
          </p>
        </div>

        <!-- Reason 4 -->
        <div class="why-card">
          <div class="why-number">04</div>
          <h3 class="why-title">Future-Ready Integration</h3>
          <p class="why-description">
            Connect seamlessly with WhatsApp, email, and your existing CRM tools
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- ========================================
       SECTION 6: PRICING
       Purpose: Clear pricing tiers
       ======================================== -->
  <section class="pricing-section" aria-labelledby="pricing-heading">
    <div class="container">
      <header class="section-header">
        <h2 id="pricing-heading" class="section-title">Simple, Transparent Pricing</h2>
        <p class="section-subtitle">Start with a 14-day free trial. No credit card required.</p>
      </header>

      <div class="pricing-grid">
        <!-- Free Tier -->
        <div class="pricing-card">
          <div class="pricing-header">
            <h3 class="pricing-name">Free</h3>
            <div class="pricing-price">
              <span class="price-amount">€0</span>
              <span class="price-period">/month</span>
            </div>
            <p class="pricing-description">Perfect for testing the waters</p>
          </div>
          <ul class="pricing-features">
            <li><i class="fas fa-check"></i> Up to 10 products</li>
            <li><i class="fas fa-check"></i> 3 client accounts</li>
            <li><i class="fas fa-check"></i> Basic order management</li>
            <li><i class="fas fa-check"></i> Email support</li>
          </ul>
          <%= link_to "Get Started", "#", class: "btn btn-outline-primary btn-pricing" %>
        </div>

        <!-- Starter Tier -->
        <div class="pricing-card">
          <div class="pricing-header">
            <h3 class="pricing-name">Starter</h3>
            <div class="pricing-price">
              <span class="price-amount">€29</span>
              <span class="price-period">/month</span>
            </div>
            <p class="pricing-description">For growing businesses</p>
          </div>
          <ul class="pricing-features">
            <li><i class="fas fa-check"></i> Up to 100 products</li>
            <li><i class="fas fa-check"></i> 25 client accounts</li>
            <li><i class="fas fa-check"></i> Client-specific pricing</li>
            <li><i class="fas fa-check"></i> Order tracking</li>
            <li><i class="fas fa-check"></i> Priority email support</li>
          </ul>
          <%= link_to "Start Free Trial", "#", class: "btn btn-outline-primary btn-pricing" %>
        </div>

        <!-- Pro Tier (Popular) -->
        <div class="pricing-card popular">
          <div class="pricing-badge">Most Popular</div>
          <div class="pricing-header">
            <h3 class="pricing-name">Pro</h3>
            <div class="pricing-price">
              <span class="price-amount">€79</span>
              <span class="price-period">/month</span>
            </div>
            <p class="pricing-description">For established SMBs</p>
          </div>
          <ul class="pricing-features">
            <li><i class="fas fa-check"></i> Unlimited products</li>
            <li><i class="fas fa-check"></i> Unlimited clients</li>
            <li><i class="fas fa-check"></i> AI-powered insights</li>
            <li><i class="fas fa-check"></i> Custom branding</li>
            <li><i class="fas fa-check"></i> WhatsApp integration</li>
            <li><i class="fas fa-check"></i> Priority support</li>
          </ul>
          <%= link_to "Start Free Trial", "#", class: "btn btn-primary btn-pricing" %>
        </div>

        <!-- Enterprise Tier -->
        <div class="pricing-card">
          <div class="pricing-header">
            <h3 class="pricing-name">Enterprise</h3>
            <div class="pricing-price">
              <span class="price-amount">Custom</span>
            </div>
            <p class="pricing-description">For large organizations</p>
          </div>
          <ul class="pricing-features">
            <li><i class="fas fa-check"></i> Everything in Pro</li>
            <li><i class="fas fa-check"></i> Dedicated account manager</li>
            <li><i class="fas fa-check"></i> Custom integrations</li>
            <li><i class="fas fa-check"></i> SLA guarantee</li>
            <li><i class="fas fa-check"></i> On-premise option</li>
            <li><i class="fas fa-check"></i> 24/7 phone support</li>
          </ul>
          <%= link_to "Contact Sales", "#", class: "btn btn-outline-primary btn-pricing" %>
        </div>
      </div>
    </div>
  </section>

  <!-- ========================================
       SECTION 7: SOCIAL PROOF / LOGOS BAR
       Purpose: Build trust
       ======================================== -->
  <section class="logos-section" aria-label="Trusted by companies">
    <div class="container">
      <p class="logos-heading">Trusted by growing businesses</p>
      <div class="logos-grid">
        <div class="logo-item" data-placeholder="hubspot-logo">
          <span class="logo-text logo-hubspot">HubSpot</span>
        </div>
        <div class="logo-item" data-placeholder="notion-logo">
          <span class="logo-text logo-notion">Notion</span>
        </div>
        <div class="logo-item" data-placeholder="linear-logo">
          <span class="logo-text logo-linear">Linear</span>
        </div>
        <div class="logo-item" data-placeholder="figma-logo">
          <span class="logo-text logo-figma">Figma</span>
        </div>
        <div class="logo-item" data-placeholder="miro-logo">
          <span class="logo-text logo-miro">miro</span>
        </div>
        <div class="logo-item" data-placeholder="lewagon-logo">
          <span class="logo-text logo-lewagon">Le Wagon</span>
        </div>
      </div>
    </div>
  </section>

  <!-- ========================================
       SECTION 7: TESTIMONIAL
       Purpose: Social proof from a real customer
       ======================================== -->
  <section class="testimonial-section" aria-labelledby="testimonial-heading">
    <div class="container">
      <h2 id="testimonial-heading" class="visually-hidden">Customer Testimonial</h2>
      <blockquote class="testimonial-quote">
        <p class="quote-text">
          "We went from spending hours on WhatsApp taking orders to having everything automated. Our clients love it and we've grown 40% since switching to Nodal."
        </p>
        <footer class="quote-attribution">
          <div class="quote-avatar" data-placeholder="customer-avatar">
            <i class="fas fa-user-circle"></i>
          </div>
          <div class="quote-info">
            <cite class="quote-name">Customer Name</cite>
            <span class="quote-title">Operations Manager, Company</span>
          </div>
        </footer>
      </blockquote>
    </div>
  </section>

  <!-- ========================================
       SECTION 8: BOTTOM CTA
       Purpose: Final conversion opportunity
       ======================================== -->
  <section class="cta-section" aria-labelledby="cta-heading">
    <div class="container">
      <div class="cta-content">
        <h2 id="cta-heading" class="cta-headline">Transform how you connect with your clients</h2>
        <p class="cta-subheadline">
          Join businesses already using Nodal to grow their B2B sales.
        </p>
        <div class="cta-buttons">
          <%= link_to "Get Started", "#", class: "btn btn-primary btn-lg" %>
          <%= link_to "Book a Demo", "#", class: "btn btn-outline-light btn-lg" %>
        </div>
        <p class="cta-disclaimer">Free 14-day trial • No credit card required • Cancel anytime</p>
      </div>
    </div>
  </section>

  <!-- ========================================
       SECTION 9: FOOTER
       ======================================== -->
  <%= render "shared/footer" %>
</div>
