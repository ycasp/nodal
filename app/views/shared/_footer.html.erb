<!-- Footer Section -->
<footer class="site-footer">
  <div class="container">
    <div class="footer-grid">
      <!-- Brand Column -->
      <div class="footer-brand">
        <%= link_to root_path, class: "footer-logo" do %>
          <span class="logo-icon">N</span><span class="logo-text">odal</span>
        <% end %>
        <p class="footer-tagline"><%= t("footer.tagline") %></p>
        <!-- Social Links -->
        <div class="footer-social">
          <a href="#" aria-label="Twitter" data-placeholder="twitter-icon">
            <i class="fab fa-twitter"></i>
          </a>
          <a href="#" aria-label="LinkedIn" data-placeholder="linkedin-icon">
            <i class="fab fa-linkedin-in"></i>
          </a>
          <a href="#" aria-label="GitHub" data-placeholder="github-icon">
            <i class="fab fa-github"></i>
          </a>
        </div>
      </div>

      <!-- Product Column -->
      <div class="footer-column">
        <h4><%= t("footer.product.title") %></h4>
        <ul>
          <li><%= link_to t("footer.product.catalog_management"), "#" %></li>
          <li><%= link_to t("footer.product.order_management"), "#" %></li>
          <li><%= link_to t("footer.product.pricing_discounts"), "#" %></li>
          <li><%= link_to t("footer.product.analytics"), "#" %></li>
          <li><%= link_to t("footer.product.pricing"), "#" %></li>
        </ul>
      </div>

      <!-- Solutions Column -->
      <div class="footer-column">
        <h4><%= t("footer.solutions.title") %></h4>
        <ul>
          <li><%= link_to t("footer.solutions.food_beverage"), "#" %></li>
          <li><%= link_to t("footer.solutions.wholesale"), "#" %></li>
          <li><%= link_to t("footer.solutions.manufacturing"), "#" %></li>
          <li><%= link_to t("footer.solutions.b2b_retail"), "#" %></li>
        </ul>
      </div>

      <!-- Resources Column -->
      <div class="footer-column">
        <h4><%= t("footer.resources.title") %></h4>
        <ul>
          <li><%= link_to t("footer.resources.getting_started"), "#" %></li>
          <li><%= link_to t("footer.resources.help_center"), "#" %></li>
          <li><%= link_to t("footer.resources.api_docs"), "#" %></li>
          <li><%= link_to t("footer.resources.blog"), "#" %></li>
        </ul>
      </div>

      <!-- Company Column -->
      <div class="footer-column">
        <h4><%= t("footer.company.title") %></h4>
        <ul>
          <li><%= link_to t("footer.company.about"), "#" %></li>
          <li><%= link_to t("footer.company.contact"), "#" %></li>
          <li><%= link_to t("footer.company.careers"), "#" %></li>
          <li><%= link_to t("footer.company.security"), "#" %></li>
        </ul>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <p>&copy; <%= Date.current.year %> Nodal. <%= t("footer.legal.rights") %></p>
      <div class="footer-legal">
        <%= link_to t("footer.legal.privacy"), "#" %>
        <%= link_to t("footer.legal.terms"), "#" %>
      </div>
    </div>
  </div>
</footer>
