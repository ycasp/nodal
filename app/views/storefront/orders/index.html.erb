<%= link_to products_path(org_slug: params[:org_slug]), class: "btn btn-outline-secondary mb-4 mt-5" do %>
  <i class="fa-solid fa-arrow-left me-2"></i>Back to products
<% end %>

<h1 class="mb-4">Order History</h1>

<% if @orders.any? %>
  <div class="card border-0 shadow-sm" style="border-radius: 12px;">
    <div class="card-body p-0">
      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th class="ps-4">Order Number</th>
            <th>Date</th>
            <th>Items</th>
            <th>Total</th>
            <th>Status</th>
            <th class="pe-4"></th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td class="ps-4 fw-medium"><%= order.order_number %></td>
              <td><%= order.placed_at&.strftime("%B %d, %Y") %></td>
              <td><%= order.order_items.count %> items</td>
              <td><%= humanized_money_with_symbol(order.total_amount) %></td>
              <td>
                <% status_class = case order.status
                   when 'completed' then 'bg-success'
                   when 'processed' then 'bg-info'
                   when 'in_process' then 'bg-warning text-dark'
                   else 'bg-secondary'
                   end %>
                <span class="badge <%= status_class %>"><%= order.status.titleize %></span>
              </td>
              <td class="text-end pe-4">
                <div class="d-flex justify-content-end gap-3">
                  <%= button_to reorder_order_path(org_slug: params[:org_slug], id: order), method: :post, class: "btn btn-sm btn-outline-secondary" do %>
                    <i class="fa-solid fa-rotate-right me-1"></i>Reorder
                  <% end %>
                  <%= link_to order_path(org_slug: params[:org_slug], id: order), class: "btn btn-sm btn-outline-primary" do %>
                    View <i class="fa-solid fa-arrow-right ms-1"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <div class="card border-0 shadow-sm" style="border-radius: 12px;">
    <div class="card-body text-center py-5">
      <i class="fa-solid fa-receipt fa-4x text-muted mb-3"></i>
      <h4>No orders yet</h4>
      <p class="text-muted">Once you place an order, it will appear here.</p>
      <%= link_to "Browse Products", products_path(org_slug: params[:org_slug]), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
